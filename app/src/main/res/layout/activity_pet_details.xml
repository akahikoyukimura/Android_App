<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    tools:context=".PetDetails"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.001"
            android:background="@drawable/edit_text_background"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton

                    android:id="@+id/back_button"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/edit_text1_background"
                    android:stateListAnimator="@null"
                    android:textAllCaps="false"
                    android:textSize="10dp"
                    app:icon="@drawable/ic_baseline_arrow_back_24"
                    app:backgroundTint="@color/white"
                    app:iconTint="@color/black" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/didact_gothic"
                    android:text="Pet Details"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text1_background"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="50dp"
                    android:elevation="0dp"
                    app:cardElevation="0dp"
                    >
                <ImageView
                    android:id="@+id/pet_details_image1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@tools:sample/avatars" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingStart="25dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="25dp"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/pet_details_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textSize="20dp"
                            android:fontFamily="@font/didact_gothic"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/pet_details_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/didact_gothic"
                            android:text="Domestic Animals"
                            android:textColor="@color/edit_text" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton

                                android:id="@+id/button6"
                                style="@style/Widget.MaterialComponents.Button.Icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginBottom="2dp"
                                android:background="@drawable/btn_pink_background"
                                android:stateListAnimator="@null"
                                android:text="Adult"
                                android:textAllCaps="false"
                                android:textColor="@color/barck_pink"
                                android:textSize="10dp"
                                app:backgroundTint="@color/pink"
                                app:iconTint="@color/barck_pink" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/button7"
                                style="@style/Widget.MaterialComponents.Button.Icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginBottom="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn_yellow_background"
                                android:stateListAnimator="@null"
                                android:text="Female"
                                android:textAllCaps="false"
                                android:textColor="@color/orange"
                                android:textSize="10dp"
                                app:backgroundTint="@color/yellow_button"
                                app:iconTint="@color/orange" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight=".4"
                        android:background="@drawable/pet_details_background1"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginStart="2dp"
                            android:elevation="0dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/pet_details_image2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                tools:srcCompat="@tools:sample/avatars" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                    <!--<FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight=".45"
                        android:layout_height="120dp"
                        >

                        <VideoView
                            android:id="@+id/video_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            />

                    </FrameLayout>-->
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/edit_text1_background"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="15dp"
                android:paddingBottom="20dp">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/pet_details_user"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".20"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".50"
                    android:orientation="vertical"
                    android:paddingStart="15dp">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Maria"
                        android:fontFamily="@font/didact_gothic"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sia's owner"
                        android:fontFamily="@font/didact_gothic"
                        android:textColor="@color/edit_text"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight=".45"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton

                        android:id="@+id/pet_details_call1"
                        style="@style/Widget.MaterialComponents.Button.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        app:iconGravity="textEnd"
                        android:background="@drawable/btn_blue_background"
                        android:stateListAnimator="@null"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/blue"
                        android:textSize="10dp"
                        app:backgroundTint="@color/blue_light"
                        app:icon="@drawable/ic_baseline_phone_24"
                        app:iconTint="@color/blue" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button10"
                        style="@style/Widget.MaterialComponents.Button.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        app:iconGravity="textEnd"
                        android:background="@drawable/btn_pink_background"
                        android:stateListAnimator="@null"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/barck_pink"
                        android:textSize="10dp"
                        app:backgroundTint="@color/pink"
                        app:icon="@drawable/ic_baseline_local_post_office_24"
                        app:iconTint="@color/barck_pink" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/didact_gothic"
                    android:lines="2"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:text="I'm Mina. I am the more laid back of my brothers and I. I don't purr loud, but you canI'm Mina. I am the more laid back of my brothers and I. I don't purr loud, but you can" />

                <com.google.android.material.button.MaterialButton

                    android:id="@+id/pet_details_call"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_blue_background"
                    android:stateListAnimator="@null"
                    android:text="Adopt Me"
                    android:fontFamily="@font/didact_gothic"
                    android:textAllCaps="false"
                    android:textColor="@color/blue"
                    android:textSize="18dp"
                    app:backgroundTint="@color/blue_light"
                    app:icon="@drawable/ic_baseline_phone_24"
                    app:iconGravity="textStart"
                    app:iconTint="@color/blue" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>